{
  "name": "nestly-estate-platform",
  "version": "1.0.0",
  "description": "Full-stack real estate platform with React frontend and Node.js backend",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "concurrently \"npm run server:dev\" \"npm run client:dev\"",
    "build": "npm run client:build",
    "start": "npm run server:start",
    "install:all": "npm install && cd client && npm install && cd ../server && npm install",
    "client:dev": "cd client && npm run dev",
    "client:build": "cd client && npm run build",
    "client:preview": "cd client && npm run preview",
    "client:lint": "cd client && npm run lint",
    "server:dev": "cd server && npm run dev",
    "server:start": "cd server && npm start",
    "server:migrate": "cd server && npm run migrate",
    "migrate:setup": "node setup-migration.js",
    "clean": "rimraf client/dist client/node_modules server/node_modules node_modules",
    "setup": "npm run install:all && npm run migrate:setup"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "concurrently": "^8.2.2",
    "jest": "^29.7.0",
    "nodemon": "^3.1.10",
    "rimraf": "^5.0.5",
    "supertest": "^6.3.4"
  },
  "workspaces": [
    "client",
    "server"
  ],
  "keywords": [
    "real-estate",
    "react",
    "nodejs",
    "mongodb",
    "express",
    "jwt",
    "fullstack"
  ],
  "author": "Nestly Estate Team",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "dependencies": {
    "a": "^4.0.0",
    "bcryptjs": "^2.4.3",
    "cloudinary": "^1.41.3",
    "compression": "^1.8.1",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "express": "^4.21.2",
    "express-mongo-sanitize": "^2.2.0",
    "express-rate-limit": "^7.5.1",
    "express-validator": "^7.2.1",
    "helmet": "^7.2.0",
    "hpp": "^0.2.3",
    "joi": "^17.13.3",
    "jsonwebtoken": "^9.0.2",
    "lodash.includes": "^4.3.0",
    "lodash.isboolean": "^3.0.3",
    "lodash.isinteger": "^4.0.4",
    "lodash.isnumber": "^3.0.3",
    "lodash.isplainobject": "^4.0.6",
    "lodash.isstring": "^4.0.1",
    "lodash.once": "^4.1.1",
    "mongoose": "^8.19.0",
    "morgan": "^1.10.1",
    "multer": "^1.4.5-lts.1",
    "node-cron": "^4.2.1",
    "nodemailer": "^6.10.1",
    "punycode": "^2.3.1",
    "socket.io": "^4.8.1",
    "twilio": "^4.23.0",
    "winston": "^3.18.3",
    "xss-clean": "^0.1.4"
  },
  "main": "server.js",
  "directories": {
    "test": "tests"
  }
}
