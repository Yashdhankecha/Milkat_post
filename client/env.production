# Production Client Environment Variables Template
# Copy this file to .env.production for production builds

# API Configuration
VITE_API_URL=https://milkatpost.com/api

# Application Configuration
VITE_APP_NAME=Milkat Post
VITE_APP_VERSION=1.0.0
VITE_APP_DESCRIPTION=Real Estate Management Platform

# Environment
VITE_NODE_ENV=production

# Features
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_DEBUG=false

# OTP Bypass Mode (for development/testing)
VITE_MOCK_OTP=true

# External Services
VITE_GOOGLE_MAPS_API_KEY=your-production-google-maps-api-key
VITE_RECAPTCHA_SITE_KEY=your-production-recaptcha-site-key

# Social Media
VITE_FACEBOOK_APP_ID=your-production-facebook-app-id
VITE_GOOGLE_CLIENT_ID=your-production-google-client-id

# File Upload
VITE_MAX_FILE_SIZE=10485760
VITE_ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp,application/pdf

# WebSocket
VITE_WS_URL=wss://milkatpost.com

# Cloudinary (for direct uploads if needed)
VITE_CLOUDINARY_CLOUD_NAME=your-production-cloudinary-cloud-name
VITE_CLOUDINARY_UPLOAD_PRESET=your-production-upload-preset

# Analytics
VITE_GA_TRACKING_ID=your-production-google-analytics-id
VITE_HOTJAR_ID=your-production-hotjar-id

# Support
VITE_SUPPORT_EMAIL=support@milkatpost.com
VITE_CONTACT_PHONE=+91-9876543210

# Legal
VITE_TERMS_URL=https://milkatpost.com/terms
VITE_PRIVACY_URL=https://milkatpost.com/privacy

# Security
VITE_CSP_NONCE=true

# Performance
VITE_ENABLE_SERVICE_WORKER=true
VITE_ENABLE_PRECACHING=true

# Monitoring
VITE_SENTRY_DSN=your-sentry-dsn
VITE_LOGROCKET_APP_ID=your-logrocket-app-id
