{
  "name": "nestly-estate-platform",
  "version": "1.0.0",
  "description": "Full-stack real estate platform with React frontend and Node.js backend",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "concurrently \"npm run server:dev\" \"npm run client:dev\"",
    "build": "npm run client:build",
    "start": "npm run server:start",
    "install:all": "npm install && cd client && npm install && cd ../server && npm install",
    "client:dev": "cd client && npm run dev",
    "client:build": "cd client && npm run build",
    "client:preview": "cd client && npm run preview",
    "client:lint": "cd client && npm run lint",
    "server:dev": "cd server && npm run dev",
    "server:start": "cd server && npm start",
    "server:migrate": "cd server && npm run migrate",
    "migrate:setup": "node setup-migration.js",
    "clean": "rimraf client/dist client/node_modules server/node_modules node_modules",
    "setup": "npm run install:all && npm run migrate:setup"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "rimraf": "^5.0.5"
  },
  "workspaces": [
    "client",
    "server"
  ],
  "keywords": [
    "real-estate",
    "react",
    "nodejs",
    "mongodb",
    "express",
    "jwt",
    "fullstack"
  ],
  "author": "Nestly Estate Team",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}